<div id="<%= dom_id operation %>">
  <tr>
    <td><%= index + 1 %></td>
    <td><%= operation.category.name %></td>
    <td><%= operation.amount %></td>
    <td><%= operation.odate %></td>
    <td><%= operation.description %></td>
    <td>
      <div class="settings">
        <%= link_to "", edit_operation_path(operation), class: "btn btn-info bi bi-pencil-square settings-buttons" %>
        <%= button_to "", operation, method: :delete, class: "btn btn-danger bi bi-trash3 settings-buttons" %>
      </div>
    </td>
  </tr>
</div>
