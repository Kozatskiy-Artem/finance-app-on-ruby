<div class="col-md-10 offset-md-1 col-lg-6 offset-lg-3">
  <div class="content-block content-block-head">
    <h1>Report by category</h1>
    <p> Operations for the period: <%= @start %> - <%= @end %>
    <div>
      <table class="table table-hover" id="userTable">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Categories</th>
            <th scope="col">Amounts</th>
        </tr>
        </thead>
        <tbody>
          <% @categories_and_amount.each_with_index do |(key, value), index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= key %></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="col-md-10 offset-md-1 col-lg-6 offset-lg-3">
  <div class="content-block">
    <div>
      <canvas id="myPieChart"></canvas>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myPieChart').getContext('2d');
  const data = {
    labels: <%= raw @categories_and_amount.keys %>,
    datasets: [{
        label: 'Period: ' + '<%= @start %>' + ' - ' + '<%= @end %>',
        data: <%= @categories_and_amount.values %>,
        backgroundColor: <%= raw @background_colors %>,
        hoverOffset: 4
    }]
    };
    const config = {
        type: 'pie',
        data: data,
    };

  const myChart = new Chart(ctx, config)
</script>

