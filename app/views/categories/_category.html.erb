<div id="<%= dom_id category %>">
  <tr>
    <td><%= index + 1 %></td>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td>
      <%= link_to "Edit", edit_category_path(category), class: "btn btn-info" %>
    </td>
    <td>
      <%= button_to "Delete", category, method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
</div>
