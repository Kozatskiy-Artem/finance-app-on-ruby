<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: inline-flex" %>
    <%= form.text_field :amount, placeholder: "Enter sum" %>
  </div>

  <div>
    <%= form.label :odate, style: "display: inline-flex" %>
    <%= form.date_field :odate %>
  </div>

  <div>
    <%= form.label :description, style: "display: inline-flex" %>
    <%= form.text_field :description, placeholder: "Enter description" %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: inline-flex" %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, :prompt => "Select a category" %>
  </div>

  <div>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
    <button type="reset" class="btn btn-secondary">Reset</button>
  </div>
<% end %>
