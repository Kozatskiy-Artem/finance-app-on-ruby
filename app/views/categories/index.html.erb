<div class="col-md-8 offset-md-2">
  <div class="content-block content-block-head">
    <h1>Categories of expenses/incomes</h1>
  </div>
</div>

<div class="col-md-8 offset-md-2">
  <div class="content-block">
    <p style="color: green"><%= notice %></p>
    <div class="table">
      <table class="table table-hover" id="userTable">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Settings</th>
        </tr>
        </thead>
        <tbody>
          <% @categories.each_with_index do |category, index| %>
            <%= render partial: "category", locals: { category: category, index: index } %>
          <% end %>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
    <hr>
    <div>
      <%= link_to "New category", new_category_path, class: "btn btn-primary btn-md" %>
    </div>
  </div>
</div>
